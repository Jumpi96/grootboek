{
  "name": "grootboek",
  "version": "0.1.0",
  "description": "TypeScript financial ledger system with storage adapters",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juampilorenzo/grootboek.git"
  },
  "keywords": [
    "ledger",
    "accounting",
    "finance",
    "double-entry",
    "bookkeeping"
  ],
  "author": "",
  "license": "MIT",
  "exports": {
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./adapters/file": {
      "types": "./dist/adapters/file/index.d.ts",
      "import": "./dist/adapters/file/index.js"
    },
    "./adapters/git": {
      "types": "./dist/adapters/git/index.d.ts",
      "import": "./dist/adapters/git/index.js"
    },
    "./adapters/postgres": {
      "types": "./dist/adapters/postgres/index.d.ts",
      "import": "./dist/adapters/postgres/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm test && npm run build"
  },
  "dependencies": {
    "decimal.js": "^10.4.3"
  },
  "peerDependencies": {
    "pg": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "pg": "^8.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
